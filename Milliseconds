/**
 * The program convert from milliseconds to days, hours, minutes and seconds
 * @HADAS NUKRAI
 * @11/10/2021
 */
import java.util.Scanner;
public class Milliseconds
{
    public static void main (String []args)
    {
        int days;
        int hours;
        int minutes;
        int seconds;
        final long SECOND_IN_MILLIS = 1000;//a value to help calculate the seconds from milliseconds
        final long MINUTE_IN_MILLIS = SECOND_IN_MILLIS * 60;//a value to help calculate the mintues from milliseconds
        final long HOUR_IN_MILLIS = MINUTE_IN_MILLIS * 60;//a value to help calculate the hours from milliseconds
        final long DAY_IN_MILLIS = 86400000;//a value to help calculate the days from milliseconds
        Scanner scan=new Scanner (System.in);
        System.out.println("This program reads an integer which represents Milliseconds and convert it to days, hours,"+
                "minutes and seconds.");
        System.out.println("Please enter the number of Milliseconds");
        long ms=scan.nextLong();//the user enter a number
        days=(int)(ms/DAY_IN_MILLIS);//convert from milliseconds to days
        hours=(int)((ms/HOUR_IN_MILLIS)%24);//convert from milliseconds to hours
        minutes=(int)((ms/MINUTE_IN_MILLIS)%60);//convert from milliseconds to minutes
        seconds=(int)((ms/SECOND_IN_MILLIS)%60);//convert from milliseconds to seconds
        System.out.println(days+" days "+hours+":"+minutes+":"+seconds+" hours");
    }
}
